{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Server",
            "type": "process",
            "command": "./hugo",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "windows": {
                "command": "./hugo.exe"
            },
            "args": [
                "serve",
                "--source",
                "./src"
            ],
            "problemMatcher": []
        }
    ]
}